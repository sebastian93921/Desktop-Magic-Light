            <Grid x:Name="clock" Opacity="0">
                <Border x:Name="hour" CornerRadius="0 15 15 0" Width="51" BorderThickness="3" BorderBrush="white" Margin="0,96,49,96" HorizontalAlignment="Right" RenderTransformOrigin="0,0.5">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="9" ShadowDepth="1"/>
