                    </Border.RenderTransform>
                </Border>
                <Ellipse Fill="White" Width="10" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="9" ShadowDepth="1"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Grid>
        </Grid>
    </Grid>
</Window>
